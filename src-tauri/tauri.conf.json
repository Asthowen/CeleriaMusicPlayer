{
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev & pnpm run tailwindcss",
    "devPath": "http://localhost:5173",
    "distDir": "../src/dist"
  },
  "package": {
    "productName": "Celeria",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true,
        "create": false
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "$APPLOCALDATA/cover/albums/**"
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "scope": [
          "$APPLOCALDATA/cover/albums/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Music",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "celeria",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Celeria is a software that read, manage and download musics.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "title": "Celeria",
        "label": "main",
        "decorations": false,
        "center": true,
        "focus": true
      }
    ]
  }
}
